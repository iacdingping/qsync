<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.openteach.qsync.core.order.OrderfreightquotationDao">
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="order-Orderfreightquotation-columns">
	    <![CDATA[
		`id` as `id`, `ccorder_id` as `ccorderId`, `freightquotation_id` as `freightquotationId`, `freight` as `freight`, `createDatetime` as `createDatetime`, `updatedatetime` as `updatedatetime`
	    ]]>
	</sql>	

	<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
	<insert id="save" useGeneratedKeys="true" keyProperty="id">
    <![CDATA[
        INSERT INTO cc_kata_kplus_orderfreightquotation (
        `id`, `ccorder_id`, `freightquotation_id`, `freight`, `createDatetime`, `updatedatetime`
        ) VALUES (
        #{id}, #{ccorderId}, #{freightquotationId}, #{freight}, #{createDatetime}, #{updatedatetime}        
        )
    ]]>
		<!--	
			oracle: order="BEFORE" SELECT sequenceName.nextval AS ID FROM DUAL 
			DB2: order="BEFORE"" values nextval for sequenceName
		<selectKey resultType="java.lang.Long" order="BEFORE" keyProperty="userId">
			SELECT sequenceName.nextval AS ID FROM DUAL 
        </selectKey>
		-->
	</insert>
    
	<update id="update">
    <![CDATA[
        UPDATE cc_kata_kplus_orderfreightquotation SET
	        `ccorder_id` = #{ccorderId} , `freightquotation_id` = #{freightquotationId} , `freight` = #{freight} , `createDatetime` = #{createDatetime} , `updatedatetime` = #{updatedatetime}  
        WHERE 
        	id = #{id}  	        
    ]]>
	</update>

    <delete id="deleteById">
    <![CDATA[
        DELETE FROM cc_kata_kplus_orderfreightquotation WHERE
        `id` = #{id} 
    ]]>
    </delete>
    
    <select id="getById" resultType="Orderfreightquotation">
		SELECT <include refid="order-Orderfreightquotation-columns" />
	    <![CDATA[
		    FROM cc_kata_kplus_orderfreightquotation 
	        WHERE 
		        `id` = #{id} 
	    ]]>
	</select>
	
	<sql id="Orderfreightquotation-where">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>	      				
	       <if test="id">
				AND `id` = #{id}
			</if>
	       <if test="ccorderId">
				AND `ccorder_id` = #{ccorderId}
			</if>
	       <if test="freightquotationId">
				AND `freightquotation_id` = #{freightquotationId}
			</if>
	       <if test="freight">
				AND `freight` = #{freight}
			</if>
	       <if test="createDatetimeBegin != null">
				AND `createDatetime` >= #{createDatetimeBegin}
		   </if>
		   <if test="createDatetimeEnd != null">
				AND `createDatetime` &lt;= #{createDatetimeEnd}
		   </if>
	       <if test="updatedatetimeBegin != null">
				AND `updatedatetime` >= #{updatedatetimeBegin}
		   </if>
		   <if test="updatedatetimeEnd != null">
				AND `updatedatetime` &lt;= #{updatedatetimeEnd}
		   </if>
		</where>
	</sql>
		
    <select id="count" resultType="long">
        SELECT count(*) FROM cc_kata_kplus_orderfreightquotation 
		<include refid="Orderfreightquotation-where"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 offset,pageSize,lastRows 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="findPage" resultType="Orderfreightquotation">
    	SELECT <include refid="order-Orderfreightquotation-columns" />
	    FROM cc_kata_kplus_orderfreightquotation 
		<include refid="Orderfreightquotation-where"/>
		
		<if test="sortColumns != null">
			ORDER BY ${sortColumns}
		</if>
    </select>
	
	<select id="list" resultType="Orderfreightquotation">
    	SELECT <include refid="order-Orderfreightquotation-columns" />
	    FROM cc_kata_kplus_orderfreightquotation 
		<include refid="Orderfreightquotation-where"/>
		
		<if test="sortColumns != null">
			ORDER BY ${sortColumns}
		</if>
    </select>

	
</mapper>

